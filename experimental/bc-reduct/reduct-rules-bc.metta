(: orCut (-> $x ğğ¨ğ¨ğ¥))
(= (orCut $expr)
   (case $expr
      (
        ;; ((ğ¨ğ« Nil) (mkReduct CutOr $expr ğ“ğ«ğ®ğ))
        ;; ((ğ¨ğ« (Cons $x Nil)) (mkReduct CutOr $expr $x))
        ((ğ¨ğ« Nil) ğ“ğ«ğ®ğ)
        ((ğ¨ğ« (Cons $x Nil)) $x)
        ((ğ¨ğ« (Cons $x $xs)) $expr)
        ($else (Error IncorrectExpression)))))

 (: andCut (-> $x ğğ¨ğ¨ğ¥))
 (= (andCut $expr)
    (case $expr
       (
         ;; ((ğšğ§ğ Nil) (mkReduct CutAnd $expr ğ…ğšğ¥ğ¬ğ))
         ;; ((ğšğ§ğ (Cons $x Nil)) (mkReduct CutAnd $expr $x))
         ((ğšğ§ğ Nil) ğ…ğšğ¥ğ¬ğ)
         ((ğšğ§ğ (Cons $x Nil)) $x)
         ((ğšğ§ğ (Cons $x $xs)) $expr)
         ($else (Error IncorrectExpression)))))

 (: idenOr (-> $x ğğ¨ğ¨ğ¥))
 (= (idenOr $expr)
    (case $expr
         (
           ;; ((ğ¨ğ« $xs) (if (== (any $xs) ğ“ğ«ğ®ğ) (mkReduct OrIden $expr ğ“ğ«ğ®ğ) (ğ¨ğ« $xs)))
           ((ğ¨ğ« $xs) (if (== (any $xs) ğ“ğ«ğ®ğ) ğ“ğ«ğ®ğ (ğ¨ğ« $xs)))
           ($else (Error IncorrectExpression)))))

 (: idenAnd (-> $x ğğ¨ğ¨ğ¥))
 (= (idenAnd $expr)
    (case $expr
         (
           ;; ((ğšğ§ğ $xs) (if (== (all $xs) ğ…ğšğ¥ğ¬ğ) (mkReduct AndIden ğ…ğšğ¥ğ¬ğ) (ğšğ§ğ $xs)))
           ((ğšğ§ğ $xs) (if (== (all $xs) ğ…ğšğ¥ğ¬ğ) ğ…ğšğ¥ğ¬ğ (ğšğ§ğ $xs)))
           ($else (Error IncorrectExpression)))))

;; (AndIden (CutOr (ğ¨ğ« (Cons (ğšğ§ğ (Cons z (Cons ğ…ğšğ¥ğ¬ğ Nil))) Nil)))) => (AndIden (ğšğ§ğ (Cons z (Cons ğ…ğšğ¥ğ¬ğ Nil)))) => ğ…ğšğ¥ğ¬ğ
(= (applyReduct $expr)
    (case $expr
          (
            ((CutOr $rest) (let $rest' (applyReduct $rest) (orCut $rest')))
            ((CutAnd $rest) (let $rest' (applyReduct $rest) (andCut $rest')))
            ((OrIden $rest) (let $rest' (applyReduct $rest) (idenOr $rest')))
            ((AndIden $rest) (let $rest' (applyReduct $rest) (idenAnd $rest')))
            ($else $expr)
          )
    )
)


